{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@/*": ["./client/src/*"],
      "@lib/*": ["./client/src/lib/*"],
      "@components/*": ["./client/src/components/*"],
      "@assets/*": ["./attached_assets/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "client/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}